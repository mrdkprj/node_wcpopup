{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "module": "nodenext",
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "lib",
    "moduleResolution": "nodenext",
    "paths": {
      "*": ["node_modules/*"],
    },
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },
  "include": ["lib/*.ts","test/*.ts"]
}
